{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2020",
    "baseUrl": "src",
    "paths": {
      "store/*": [
        "nifities_assets/src/store/*"
      ],
      "components/*": [
        "nifities_assets/src/components/*"
      ],
      "static/*": [
        "nifities_assets/src/static/*"
      ],
      "pages/*": [
        "nifities_assets/src/pages/*"
      ],
      "utils/*": [
        "nifities_assets/src/utils/*"
      ],
      "api/*": [
        "nifities_assets/src/api/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}